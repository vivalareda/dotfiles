" Map 1 to move to the start of the line
nnoremap 1 ^

" Map 2 to move to the end of the line
nnoremap 2 $
vnnoremap 2 $

" Set the number of spaces that a <Tab> counts for
set tabstop=4

" Set the number of spaces to use for each step of (auto)indent
set shiftwidth=4
map <Enter> o<ESC>
map <S-Enter> O<ESC>
